<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:rabbit="http://www.springframework.org/schema/rabbit" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
		  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context   
          http://www.springframework.org/schema/context/spring-context-3.0.xsd  
          http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit-1.3.xsd">

	<!-- 连接服务配置 -->
	<bean id="connectionFactory" class="org.springframework.amqp.rabbit.connection.CachingConnectionFactory">
		<property name="addresses" value="${rmq.ip}" />
		<property name="username" value="${rmq.user}" />
		<property name="password" value="${rmq.password}" />
		<property name="virtualHost" value="/" />
		<property name="port" value="${rmq.port}" />
		<property name="channelCacheSize" value="50" />
		<property name="publisherReturns" value="true" />
	</bean>

	<rabbit:admin connection-factory="connectionFactory" />

	<rabbit:template id="amqTemplate" connection-factory="connectionFactory" message-converter="jackson2JsonMessageConverter" />
	
	<bean id="jackson2JsonMessageConverter" class="org.springframework.amqp.support.converter.Jackson2JsonMessageConverter"/>

	<rabbit:direct-exchange name="testQueueExchange" durable="true" auto-delete="false">
		<rabbit:bindings>
			<rabbit:binding queue="testQueue" key="test.Queue" />
		</rabbit:bindings>
	</rabbit:direct-exchange>

	<rabbit:topic-exchange name="testTopicExchange" durable="true" auto-delete="false">
		<rabbit:bindings>
			<rabbit:binding pattern="#" queue="testTopic" />
			<rabbit:binding pattern="#Queue" queue="testQueue" />
		</rabbit:bindings>
	</rabbit:topic-exchange>

	<rabbit:fanout-exchange name="testFanoutExchange" durable="true" auto-delete="false">
		<rabbit:bindings>
			<rabbit:binding queue="testTopic" />
			<rabbit:binding queue="testQueue" />
			<rabbit:binding queue="testFanout" />
		</rabbit:bindings>
	</rabbit:fanout-exchange>

	<!-- 消费者 -->
	<bean name="queueConsumer" class="com.taylor.mq.RmqQueueConsumer" />
	<bean name="topicConsumer" class="com.taylor.mq.RmqTopicConsumer" />

	<!-- 队列 -->
	<rabbit:queue id="testQueue" name="testQueue" durable="true" auto-delete="false" exclusive="false" />
	<rabbit:queue id="testTopic" name="testTopic" durable="true" auto-delete="false" exclusive="false" />
	<rabbit:queue id="testFanout" name="testFanout" durable="true" auto-delete="false" exclusive="false" />

	<!-- 配置监听 -->
	<rabbit:listener-container connection-factory="connectionFactory" acknowledge="auto" prefetch="${rmq.concurrency}" concurrency="${rmq.concurrency}">
		<!-- queues 监听队列，多个用逗号分隔 ref 监听器 -->
		<rabbit:listener queues="testQueue" ref="queueConsumer" method="onMessage" />
		<rabbit:listener queues="testTopic" ref="topicConsumer" method="onMessage" />
	</rabbit:listener-container>
</beans>